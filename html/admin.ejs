<!-- public/worker-control.html -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Scraper Worker Control</title>
  </head>
  <body>
    <h1>Scraper Worker Control Panel</h1>

    <div class="panel">
      <h2>Worker Status</h2>
      <div id="status" class="status">Loading status...</div>

      <div class="buttons">
        <button id="start-worker">Start Worker</button>
        <button id="stop-worker">Stop Worker</button>
        <button id="restart-worker">Restart Worker</button>
        <button id="run-now">Run Scrape Now</button>
      </div>

      <h3>Action Log</h3>
      <div id="action-log" class="log"></div>
    </div>
  </body>
</html>
